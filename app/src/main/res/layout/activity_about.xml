<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    android:background="@color/white">
    <Layout.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/xidong_logo"
        android:layout_width="200dp"
        android:layout_height="113dp"
        android:src="@drawable/logo"
        android:layout_above="@id/xidong_text"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/xidong_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="嘻咚V1.10"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务协议  | 隐私说明"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_above="@+id/bottom_text"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright2019-2019 嘻咚科技 保留所有权"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="26dp"/>
</RelativeLayout>