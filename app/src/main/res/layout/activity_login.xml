<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="@android:color/background_light">

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="26dp"
        android:layout_height="23dp"
        android:layout_gravity="right"
        android:layout_marginRight="23dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/icon_close"
        android:onClick="btn_finish"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="127dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="嘻咚储物柜"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="37dp"
        android:typeface="sans"
        />

    <view.ClearEditText
        android:id="@+id/login_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="下一步"
        android:textSize="32sp"
        android:textStyle="bold"
        android:onClick="loginPOST"
        android:textColor="@color/white"
        android:background="@drawable/shape"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_above="@+id/qq登陆"
            android:layout_marginBottom="20dp">
            <!--画左边的那条线-->
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第三方账号登陆"
                android:textSize="14sp"
                />
            <!--画右边的那条线-->
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                />
        </LinearLayout>
        <Button
            android:id="@+id/qq登陆"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/qq_login"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="43dp"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/txtHide"
            />
        <TextView android:id="@+id/txtHide" android:layout_width="31dp" android:layout_height="1dp"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/微信登陆"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/weixin_login"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="43dp"
            android:layout_toRightOf="@+id/txtHide"
            />
    </RelativeLayout>
</LinearLayout>