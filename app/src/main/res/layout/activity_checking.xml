<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/btn_return"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="37dp"
        android:layout_marginLeft="31dp"
        android:background="@drawable/returnlogin" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginBottom="37dp"
        android:textSize="27sp"
        android:text="验证码已发送至"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="53dp"
        >
    <TextView
        android:id="@+id/phone_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:text="18023175651"
        android:textSize="21sp"
        android:layout_weight="1"
        />
    <Button
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="获取验证码"
        android:textColor="@color/colorChecking"
        android:background="@null"
        android:enabled="true"
        android:visibility="visible"
/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="1"
        android:gravity="center"
        android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:maxEms="1"
            android:maxLength="1"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"/>
        <EditText
            android:id="@+id/edit_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:maxEms="1"
            android:maxLength="1"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"/>
        <EditText
            android:id="@+id/edit_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:maxEms="1"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"/>
        <EditText
            android:id="@+id/edit_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:maxEms="1"
            android:maxLength="1"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="注册/登录表示您已阅读，并同意以下协议："
        android:textSize="12sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="《嘻咚用户服务协议》《嘻咚用户隐私 协议》"
        android:textSize="12sp"
        />
    <Button
        android:id="@+id/btn_login"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="注册/登陆"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/white"

        android:background="@drawable/shape"
        />
</LinearLayout>