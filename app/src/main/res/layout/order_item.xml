<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/lin_order_item">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_status"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_status"
            android:textColor="@color/blue"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time"/>
        <TextView
            android:layout_toRightOf="@+id/img_time"
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-07-22"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:02"
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_time"
            android:layout_marginLeft="150dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/adress"/>
        <TextView
            android:id="@+id/str_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="租用地址："
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_adress"
            android:textColor="@color/blue"
            />
        <TextView
            android:id="@+id/order_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/str_adress"
            android:textColor="@color/blue"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_boxtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boxtype"/>
        <TextView
            android:id="@+id/str_boxtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="箱柜类型："
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_boxtype"
            android:textColor="@color/blue"
            />
        <TextView
            android:id="@+id/order_boxtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="型号"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/str_boxtype"
            android:textColor="@color/blue"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_ordertype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order"/>
        <TextView
            android:id="@+id/str_ordertype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单类型："
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_ordertype"
            android:textColor="@color/blue"
            />
        <TextView
            android:id="@+id/order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="型号"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/str_ordertype"
            android:textColor="@color/blue"

            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel_overtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <ImageView
            android:id="@+id/img_overtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jinggao"/>
        <TextView
            android:id="@+id/str_overtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已超时"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_overtime"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.50"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:textColor="@color/blue"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/img_yuan"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/price"
            android:layout_marginLeft="5dp"
            android:src="@drawable/yuan"/>
    </RelativeLayout>
</LinearLayout>