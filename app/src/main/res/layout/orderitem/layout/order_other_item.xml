<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/lin_order_item">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_status"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_status"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time"/>
        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-07-22"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/img_time"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:02"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_time"
            android:layout_marginLeft="150dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_ordertype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order"/>
        <TextView
            android:id="@+id/str_ordertype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单类型："
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_ordertype"/>
        <TextView
            android:id="@+id/order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="型号"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/str_ordertype"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.50"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/img_yuan"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/price"
            android:layout_marginLeft="5dp"
            android:src="@drawable/yuan"/>
    </RelativeLayout>
</LinearLayout>